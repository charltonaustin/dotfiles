
  (when (fboundp 'global-display-line-numbers-mode)
    (global-display-line-numbers-mode t))
  (setq display-line-numbers 'absolute)
  (global-set-key (kbd "M-DEL")
                  (lambda ()
                    (interactive)
                    (delete-region (save-excursion (backward-word) (point)) (point))))
